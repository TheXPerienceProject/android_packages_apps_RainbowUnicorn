<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/xperience_settings_title" >

    <PreferenceCategory
        android:key="xperience_interface"
        android:title="@string/xperience_interface">
         <PreferenceScreen
            android:fragment="mx.xperience.rainbowunicorn.fragments.NotificationDrawerSettings"
            android:key="xperience_notification_drawer_settings"
            android:title="@string/notification_drawer_settings_title"/>

        <PreferenceScreen
            android:fragment="mx.xperience.rainbowunicorn.fragments.StatusBarSettings"
            android:key="xperience_statusbar_settings"
            android:title="@string/statusbar_settings_title"/>
        <PreferenceScreen
            android:fragment="mx.xperience.rainbowunicorn.fragments.BatteryBar"
            android:key="batterybar"
            android:title="@string/battery_bar_title"/>
    </PreferenceCategory>
<!--Finish interface-->	
    <PreferenceCategory
        android:key="xperience_system"
        android:title="@string/xperience_system">

        <PreferenceScreen
            android:fragment="mx.xperience.rainbowunicorn.fragments.DisplaySettings"
            android:key="xperience_display_settings"
            android:title="@string/display_settings_title"/>

        <PreferenceScreen
            android:fragment="mx.xperience.rainbowunicorn.fragments.NavBarSettings"
            android:key="xperience_navbar_settings"
            android:title="@string/navbar_settings_title"/>

        <PreferenceScreen
            android:fragment="mx.xperience.rainbowunicorn.fragments.FingerprintSettings"
            android:key="xperience_fingerprint_settings"
            android:title="@string/fingerprint_settings_title"/>

       <mx.xperience.rainbowunicorn.preferences.SystemSettingSwitchPreference
        android:key="enable_task_manager"
        android:title="@string/enable_task_manager_title"
        android:summary="@string/enable_task_manager_summary" />

    </PreferenceCategory>

</PreferenceScreen>
